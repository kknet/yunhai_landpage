* {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font-family: "Microsoft Yahei";
    vertical-align: baseline;
}

@media screen and (max-width: 399px) {
    html {
        font-size: 15px;
    }
}

@media (min-width: 400px) and (max-width: 480px) {
    html {
        font-size: 20px;
    }
}

@media screen and (min-width: 481px) {
    html {
        font-size: 25px;
    }
}

html {
    background: #fff;
}

body {
    background: #EDEDED;
    margin: 0 auto;
    text-align: center;
    max-width: 750px;
    position: relative;
}

.top, .btn, .bottom {
    width: 100%;
}

.top img, .btn img, .bottom img {
    display: block;
    width: 100%;
    height: auto;
}