@import url("../../css/public.css");
@import url("../../css/bm.css");

#head { height:210px; color:white; text-align:center; background:#1f79c8; background:url(/tel/hk/img/head_bg_x.jpg) center top no-repeat; }
#head .logo { width:50px;  border:2px solid white;border-radius:100px;-moz-border-radius:100px;-webkit-border-radius:100px;-moz-box-shadow: 0px 0px 15px #024b8c;-webkit-box-shadow:0px 0px 15px #024b8c;box-shadow: 0px 0px 15px #024b8c; margin-top:15px; margin-bottom:10px;}
#head p.three { text-align:center;}
#head p.one { font-size:1.6em; line-height:1; padding-bottom:5px; color:yellow;text-shadow:0px 0px 5px #000000; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;}
#head p.two { padding:0px 15px; font-size:1.2em; line-height:1.8; text-shadow:0px 0px 5px #000000;}
#head_x .head { width:100%;}


#box .one ul{ overflow:auto; zoom:1; }
#box .one li{ padding:0px 15px; text-align:center; font-size:1.2em;}
#box .one li a,#box .one li span { text-align:center; text-shadow:0px 0px 5px white;}

#box .two { overflow:auto; zoom:1;}
#box .two li{ width:25%; float:left;}
#box .two li a { text-align:center;}
#box .two li a img { width:100%;}


.tab_clo .t,h7 { display:block; font-size:1.4em;margin-top:10px; margin-bottom:5px; color:#1f79c8; overflow:hidden; white-space:nowrap; text-overflow:ellipsis; font-weight:bold;  }
.tab_clo .t span,h7 span { display:inline-block; line-height:1.4em; padding:0px 10px; border-left:5px solid #1f79c8;  }

.tab_clo .m.three { background:white; padding:5px 10px 0px 10px;line-height:1.8; overflow:hidden; font-size:1.2em;}

.tab_clo .m.three div { overflow:hidden;}

h7 { margin-top:10px;}
h6 { text-align:center; padding-top:5px; padding-bottom:15px; background:url(/tel/hk/img/bg_more.png) left bottom repeat-x; display:block;}

h3 { font-size:1.6em;font-size:16px; text-align:center; color:#c7def2; padding:15px 0px;}
h4 { font-size:1.2em;font-size:12px; height:28px; line-height:28px; overflow:hidden; white-space:nowrap; text-overflow:ellipsis; text-align:center; border-radius:50px;-moz-border-radius:50px;-webkit-border-radius:50px; margin:5px 0px; color:#1f79c8; background:#d2eafe; font-weight:normal;}

.foot { text-align:center;padding-top:10px; padding-bottom:20px; line-height:24px; color:#222222; font-size:1.2em;}
.foot a { color:red;}


a.pc {display:inline-block; margin:0px auto; padding:2px 10px;margin-top:10px; background:#f3cb13; color:#6c3602; font-size:1.2em;font-size:12px;border-radius:5px;-moz-border-radius:5px;-webkit-border-radius:5px;}
